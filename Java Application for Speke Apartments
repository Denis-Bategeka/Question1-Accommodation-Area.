import java.util.Scanner;

class AccommodationArea {
    protected String areaName;
    protected int occupants;
    protected boolean[] lights;
    
    public AccommodationArea(String name) {
        this.areaName = name;
        this.occupants = 0;
        this.lights = new boolean[3]; // lights 1, 2, 3
    }
    
    public void addOccupants(int n) {
        occupants += n;
        System.out.println(n + " occupants added. Total: " + occupants);
    }
    
    public void removeOccupants(int n) {
        occupants = Math.max(0, occupants - n);
        System.out.println(n + " occupants removed. Total: " + occupants);
    }
    
    public void switchLightOn(int lightNum) {
        if (lightNum >= 1 && lightNum <= 3) {
            lights[lightNum - 1] = true;
            System.out.println("Light " + lightNum + " switched ON");
        }
    }
    
    public void switchLightOff(int lightNum) {
        if (lightNum >= 1 && lightNum <= 3) {
            lights[lightNum - 1] = false;
            System.out.println("Light " + lightNum + " switched OFF");
        }
    }
    
    public void reportStatus() {
        System.out.println("\n--- " + areaName + " Status Report ---");
        System.out.println("Occupants: " + occupants);
        System.out.print("Lights: ");
        for (int i = 0; i < lights.length; i++) {
            System.out.print("Light " + (i + 1) + ": " + (lights[i] ? "ON" : "OFF"));
            if (i < lights.length - 1) System.out.print(", ");
        }
        System.out.println("\n--------------------------------");
    }
}

class GymArea extends AccommodationArea {
    public GymArea() {
        super("Gym Area");
    }
}

class SwimmingArea extends AccommodationArea {
    public SwimmingArea() {
        super("Swimming Area");
    }
}

public class AccommodationManager {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        GymArea gym = new GymArea();
        SwimmingArea swimming = new SwimmingArea();
        AccommodationArea activeArea = gym; // default active area
        
        boolean running = true;
        
        while (running) {
            System.out.println("\n===== SPEKE APARTMENTS ACCOMMODATION MANAGER =====");
            System.out.println("S -- Select active area (G = Gym, P = Swimming)");
            System.out.println("W -- Add occupants");
            System.out.println("X -- Remove occupants");
            System.out.println("Y -- Switch ON light");
            System.out.println("Z -- Switch OFF light");
            System.out.println("R -- Report status");
            System.out.println("Q -- Quit program");
            System.out.print("Enter your choice: ");
            
            String choice = scanner.nextLine().toUpperCase();
            
            switch (choice) {
                case "S":
                    System.out.print("Select area (G for Gym, P for Swimming): ");
                    String areaChoice = scanner.nextLine().toUpperCase();
                    if (areaChoice.equals("G")) {
                        activeArea = gym;
                        System.out.println("Gym Area activated");
                    } else if (areaChoice.equals("P")) {
                        activeArea = swimming;
                        System.out.println("Swimming Area activated");
                    } else {
                        System.out.println("Invalid area selection!");
                    }
                    break;
                    
                case "W":
                    System.out.print("Enter number of occupants to add: ");
                    if (scanner.hasNextInt()) {
                        int addNum = scanner.nextInt();
                        scanner.nextLine(); // consume newline
                        if (addNum > 0) {
                            activeArea.addOccupants(addNum);
                        } else {
                            System.out.println("Please enter a positive number!");
                        }
                    } else {
                        System.out.println("Invalid input! Please enter an integer.");
                        scanner.nextLine(); // clear invalid input
                    }
                    break;
                    
                case "X":
                    System.out.print("Enter number of occupants to remove: ");
                    if (scanner.hasNextInt()) {
                        int removeNum = scanner.nextInt();
                        scanner.nextLine(); // consume newline
                        if (removeNum > 0) {
                            activeArea.removeOccupants(removeNum);
                        } else {
                            System.out.println("Please enter a positive number!");
                        }
                    } else {
                        System.out.println("Invalid input! Please enter an integer.");
                        scanner.nextLine(); // clear invalid input
                    }
                    break;
                    
                case "Y":
                    System.out.print("Enter light number to switch ON (1-3): ");
                    if (scanner.hasNextInt()) {
                        int lightOn = scanner.nextInt();
                        scanner.nextLine(); // consume newline
                        if (lightOn >= 1 && lightOn <= 3) {
                            activeArea.switchLightOn(lightOn);
                        } else {
                            System.out.println("Light number must be 1, 2, or 3!");
                        }
                    } else {
                        System.out.println("Invalid input! Please enter 1, 2, or 3.");
                        scanner.nextLine(); // clear invalid input
                    }
                    break;
                    
                case "Z":
                    System.out.print("Enter light number to switch OFF (1-3): ");
                    if (scanner.hasNextInt()) {
                        int lightOff = scanner.nextInt();
                        scanner.nextLine(); // consume newline
                        if (lightOff >= 1 && lightOff <= 3) {
                            activeArea.switchLightOff(lightOff);
                        } else {
                            System.out.println("Light number must be 1, 2, or 3!");
                        }
                    } else {
                        System.out.println("Invalid input! Please enter 1, 2, or 3.");
                        scanner.nextLine(); // clear invalid input
                    }
                    break;
                    
                case "R":
                    activeArea.reportStatus();
                    break;
                    
                case "Q":
                    running = false;
                    System.out.println("Thank you for using Accommodation Manager. Goodbye!");
                    break;
                    
                default:
                    System.out.println("Invalid choice! Please select from the menu options.");
            }
        }
        scanner.close();
    }
}
